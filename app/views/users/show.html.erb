<div class='user-profile'>
<div class='user-profile-top'>
<h1 class='user-profile-heading'><%= @user.settings[0].title %></h1>
<p><%= @user.settings[0].about %></p>
</div>

<% if @user.settings[0].embedded != "" %>
<div class='iframe-holder'>
<iframe src="<%= @user.settings[0].embedded %>"  width= '100%' height= '100%' frameborder='0' allowfullscreen></iframe>
</div>
<% end %>

<div>
<div class='link-container'>
<% @user.links.each do |link| %>
<div class='link-card'>
<%= image_tag link.img %>
<h1><%=link.title%></h1>
<p><%= link_to "Visit", link.url, class: 'link-button' %> </p>
<% if current_user == @user %>
<p><%= link_to "Link Details", user_link_path(@user, link), class: 'link-button' %> </p>
<% end %>
</div>
<% end %>
</div>
<% if current_user == @user %>
<%= link_to "NEW LINK", new_user_link_path(@user), class: 'new-link-button' %> 
<% end %>

</div>